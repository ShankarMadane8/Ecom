<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="ECOM-3" author="Shankar">
        <createTable tableName="address">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)"/>
            <column name="pincode" type="int"/>
            <column name="address" type="varchar(500)"/>
            <column name="district" type="varchar(255)"/>
            <column name="state" type="varchar(255)"/>
            <column name="landmark" type="varchar(255)"/>
            <column name="address_type" type="varchar(255)"/>
            <column name="mobile" type="bigint"/>
            <column name="locality" type="varchar(255)"/>
            <column name="user_id" type="int"/>
        </createTable>


    </changeSet>

</databaseChangeLog>
